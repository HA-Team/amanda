main-color = #FFF
responsiveBreakpoint = 350px

@font-face {
  font-family: system, sans-serif;
  font-style: normal;
  font-weight: 300;
  src: local(".SFNSText-Light"), local(".HelveticaNeueDeskInterface-Light"), local(".LucidaGrandeUI"), local("Ubuntu Light"), local("Segoe UI Light"), local("Roboto-Light"), local("DroidSans"), local("Tahoma");
}

@font-face
  font-family: 'Amanda', serif;
  font-style: normal
  font-weight: 700
  src: local("Source Serif Pro"), local("Source Serif Pro"), url(../fonts/SourceSerifPro-Regular.otf) format("otf")

background-size()
  -webkit-background-size: arguments
  -moz-background-size: arguments
  -o-background-size: arguments
  background-size: arguments

whenBig()
  @media screen and (min-width: responsiveBreakpoint)
    arguments

whenSmall()
  @media screen and (max-width: responsiveBreakpoint)
    arguments

*
  margin: 0

html
  min-width: 335px  // Browsers add some default marging to body
  scroll-behavior: smooth

body
  background: url(/images/landing-desktop-lq.jpg) no-repeat center center fixed
  /*background: linear-gradient(to bottom, rgba(68,68,68,.6) 20%,rgba(0,0,0,.9) 100%), url(/images/cd-cover.jpg) */
  background-size(cover)
  font-size: 1em
  font-family: "Gentium Basic"
  color: main-color


.container
  display: flex
  flex-flow column nowrap
  justify-content: center
  align-items: center


.container-inline
  display: flex
  flex-flow: row nowrap
  justify-content: center
  align-items: center

