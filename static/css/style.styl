  //   padding: 60px 0px

h1
  font-weight: 700
  font-stretch: normal
  font-size: 3em
  letter-spacing: 4px
  font-family: "Gentium Basic"

hr
  border: 0
  width: 100%
  height: 1px
  border-top: 1px solid white
  // margin: 20px auto !important

.second-divisor
  width: 20%

.video-link
  cursor: pointer

.video-link p
  // font-size: 2em
  font-weight: 100
  text-shadow: 0 1px 1px rgba(0,0,0,.4)

.button
  padding: 10px 20px
  // border: 1px solid #3D4260
  border-radius: 20px
  font-weight: 700
  letter-spacing: 1px
  text-shadow: none
  text-decoration: none
  border-color: main-color
  // opacity: .9
  color: main-color

.button:hover
  color: main-color
  border-color: main-color
  opacity: 1
  text-decoration: none

.button-social
  padding: 6px 8px 6px 9px
  display: inline-block
  @extend .button
  height: 1em

 // Modals
.modalDialog {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,0.8);
  z-index: 99999;
  opacity:0;
  -webkit-transition: opacity 400ms ease-in;
  -moz-transition: opacity 400ms ease-in;
  transition: opacity 400ms ease-in;
  pointer-events: none;
  overflow-y: auto;
}

.modalDialog:target {
  opacity:1;
  pointer-events: auto;
}

.modalDialog > div
  // width: auto
  position: relative
  padding: 5px 20px 13px 20px
  background: #FFF
  // border-radius: 20px;
  margin: auto auto 60px auto
  @media screen and (min-width: responsiveBreakpoint)
    margin: 60px auto
    max-width: 600px

.modalDialog *
  color: #000 !important

.close
  color: #FFFFFF;
  line-height: 25px;
  position: absolute;
  top: 3px;
  right: 3px;
  text-align: center;
  width: 24px;
  text-decoration: none;
  font-weight: bold;

section
  margin-bottom: 2em


@media screen and (max-width: responsiveBreakpoint)
  p
    font-size: 0.8em;


// Amanda changes
